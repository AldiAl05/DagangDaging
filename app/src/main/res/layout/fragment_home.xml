<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".fragment.FragmentHome">

    <!--Header-->
    <LinearLayout
        android:id="@+id/linearsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:drawableStart="@drawable/icon_search"
            android:hint="cari daging"
            android:padding="10dp" />


        <ImageButton
            android:id="@+id/addchart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@color/GreenCyan"
            android:src="@drawable/icon_shopping_cart" />

        <ImageButton
            android:id="@+id/notif"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@color/GreenCyan"
            android:src="@drawable/icon_notifications" />

    </LinearLayout>

    <!--kategori-->
    <LinearLayout
        android:id="@+id/linearhorizontalview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearsearch"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
