<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".MainActivity">

    <!--Header-->
    <LinearLayout
        android:id="@+id/linearsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle2"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:drawableStart="@drawable/icon_search"
            android:hint="cari daging" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@color/GreenCyan"
            android:src="@drawable/icon_shopping_cart" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@color/GreenCyan"
            android:src="@drawable/icon_notifications" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_above="@id/button_navigation_menu"
        android:layout_below="@+id/linearsearch"
        android:layout_marginTop="2dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/button_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/item_bottom_navigation" />

</RelativeLayout>